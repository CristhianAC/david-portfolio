---
import ConfirmationSignOutModal from "../components/auth/ConfirmationSignOutModal.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import BlogLayout from "../layouts/BlogLayout.astro";
import ProfileHeader from "../components/profile/ProfileHeader.astro";
import AccountStatus from "../components/profile/AccountStatus.astro";
import PremiumUpgrade from "../components/profile/PremiumUpgrade.astro";
import ProfileSettings from "../components/profile/ProfileSettings.astro";
import SupportSection from "../components/profile/SupportSection.astro";
import { supabase } from "../lib/supabase";
import siteConfig from "../site.config.mjs";

// Verificar autenticación
const { cookies, redirect } = Astro;

const accessToken = cookies.get("sb-access-token");
const refreshToken = cookies.get("sb-refresh-token");

if (!accessToken || !refreshToken) {
  return redirect("/login");
}

const { data: { user }, error } = await supabase.auth.setSession({
  refresh_token: refreshToken.value,
  access_token: accessToken.value,
});

if (error || !user) {
  cookies.delete("sb-access-token", { path: "/" });
  cookies.delete("sb-refresh-token", { path: "/" });
  return redirect("/login");
}

// Información del usuario
const userEmail = user.email || 'email@example.com';
const userName = user.user_metadata?.full_name || userEmail?.split('@')[0] || 'Usuario';
const userAvatar = user.user_metadata?.avatar_url;
const isPremium = user.user_metadata?.is_premium || false;
const memberSince = new Date(user.created_at).toLocaleDateString('es-ES', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BlogLayout
  title={`Mi Perfil - ${siteConfig.siteTitle}`}
  description="Página de perfil de usuario"
>
  <Header minimalism={true} />
  
  <!-- Contenedor principal -->
  <div class="min-h-screen bg-gray-50 dark:bg-slate-900 py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <!-- Header del perfil -->
      <ProfileHeader 
        userName={userName}
        userEmail={userEmail}
        userAvatar={userAvatar}
        isPremium={isPremium}
        memberSince={memberSince}
      />

      <!-- Contenido principal -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        
        <!-- Columna izquierda: Estado de la cuenta -->
        <div class="lg:col-span-2 space-y-6">
          
          <!-- Estado de la suscripción -->
          <AccountStatus isPremium={isPremium} />

