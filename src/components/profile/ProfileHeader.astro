---
export interface Props {
  userName: string;
  userEmail: string;
  userAvatar?: string;
  isPremium: boolean;
  memberSince: string;
}

const { userName, userEmail, userAvatar, isPremium, memberSince } = Astro.props;
---

<!-- Header del perfil -->
<div
  class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden mb-8"
>
  <!-- Banner superior -->
  <div class="h-32 bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500">
  </div>

  <!-- Información del usuario -->
  <div class="relative px-6 pb-6">
    <!-- Avatar -->
    <div class="absolute -top-16 left-6">
      <div
        class="w-24 h-24 bg-white dark:bg-slate-800 p-1 rounded-full shadow-lg"
      >
        {
          userAvatar ? (
            <img
              src={userAvatar}
              alt={userName}
              class="w-full h-full rounded-full object-cover"
            />
          ) : (
            <div class="w-full h-full rounded-full bg-gradient-to-br from-blue-400 to-purple-600 flex items-center justify-center">
              <span class="text-white text-2xl font-bold">
                {userName.charAt(0).toUpperCase()}
              </span>
            </div>
          )
        }
      </div>
    </div>

    <!-- Información básica -->
    <div class="pt-12">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div>
          <h1
            class="text-2xl font-bold text-gray-900 dark:text-white flex items-center gap-2"
          >
            {userName}
            {
              isPremium && (
                <span class="inline-flex items-center px-2 py-1 text-xs font-medium bg-gradient-to-r from-yellow-400 to-orange-500 text-white rounded-full">
                  <svg
                    class="w-3 h-3 mr-1"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                  PREMIUM
                </span>
              )
            }
          </h1>
          <p class="text-gray-600 dark:text-gray-400 mt-1">{userEmail}</p>
          <p class="text-sm text-gray-500 dark:text-gray-500 mt-1">
            Miembro desde {memberSince}
          </p>
        </div>

        <!-- Botón de cerrar sesión -->
        <button
          id="signout-button"
          class="mt-4 sm:mt-0 inline-flex items-center px-4 py-2 text-sm font-medium text-red-600 bg-red-50 hover:bg-red-100 dark:bg-red-900/20 dark:text-red-400 dark:hover:bg-red-900/30 rounded-lg transition-colors duration-200 cursor-pointer"
        >
          <svg
            class="w-4 h-4 mr-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"
            ></path>
          </svg>
          Cerrar Sesión
        </button>
      </div>
    </div>
  </div>
</div>
